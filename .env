# Vercel Environment Variables
# Copy this file to .env.local for local development
# These variables will be automatically set in the Vercel dashboard for production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://dennis-karuri-portfolio.vercel.app

# Database Configuration
MONGODB_URI=your_mongodb_uri

# Authentication
JWT_SECRET=your_secure_jwt_secret
AUTH_SECRET=your_secure_auth_secret

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Email Service (for contact form)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_TO=your_recipient_email@gmail.com

# Vercel Specific
VERCEL_ENV=production
VERCEL_URL=${NEXT_PUBLIC_SITE_URL}

# Node Environment
NODE_ENV=production
